@* ==============================
   File: Areas/Admin/Views/Reports/Index.cshtml
   ============================== *@
@model JobPortal.Areas.Admin.Models.ReportViewModel

@{
  string StatIcon(string label) => label switch
  {
    "Total Users" => "bi-people",
    "Total Companies" => "bi-buildings",
    "Total Job Listings" => "bi-briefcase",
    "Total Applications" => "bi-envelope-paper",
    _ => "bi-clipboard-data"
  };

  var today = DateTime.UtcNow.Date;
  var firstOfYear = new DateTime(today.Year, 1, 1);
  var firstOfMonth = new DateTime(today.Year, today.Month, 1);
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<div class="card shadow-sm mb-3">
  <div class="card-body">
    <form class="row g-3" method="get" asp-area="Admin" asp-controller="Reports" asp-action="Index">
      <div class="col-sm-6 col-md-3">
        <label asp-for="Filters.DateFrom" class="form-label small"></label>
        <input asp-for="Filters.DateFrom" class="form-control" type="date" />
      </div>
      <div class="col-sm-6 col-md-3">
        <label asp-for="Filters.DateTo" class="form-label small"></label>
        <input asp-for="Filters.DateTo" class="form-control" type="date" />
      </div>
      <div class="col-sm-12 col-md-4">
        <label asp-for="Filters.CompanyId" class="form-label small"></label>
        <select asp-for="Filters.CompanyId" asp-items="Model.CompanyList" class="form-select">
          <option value="">All Companies</option>
        </select>
      </div>
      <div class="col-sm-12 col-md-2 d-flex align-items-end gap-2">
        <button class="btn btn-primary w-100">Apply</button>
        <a class="btn btn-outline-secondary w-100" asp-area="Admin" asp-controller="Reports"
          asp-action="Index">Reset</a>
      </div>
    </form>
  </div>
</div>

@* Quick presets *@
<div class="card shadow-sm mb-3">
  <div class="card-body d-flex flex-wrap gap-2">
    <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="Reports" asp-action="Index"
      asp-route-DateFrom="@today.AddDays(-6).ToString("yyyy-MM-dd")" asp-route-DateTo="@today.ToString("yyyy-MM-dd")"
      asp-route-CompanyId="@Model.Filters.CompanyId">
      Last 7 days
    </a>
    <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="Reports" asp-action="Index"
      asp-route-DateFrom="@today.AddDays(-29).ToString("yyyy-MM-dd")" asp-route-DateTo="@today.ToString("yyyy-MM-dd")"
      asp-route-CompanyId="@Model.Filters.CompanyId">
      Last 30 days
    </a>
    <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="Reports" asp-action="Index"
      asp-route-DateFrom="@firstOfYear.ToString("yyyy-MM-dd")" asp-route-DateTo="@today.ToString("yyyy-MM-dd")"
      asp-route-CompanyId="@Model.Filters.CompanyId">
      YTD
    </a>
    <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="Reports" asp-action="Index"
      asp-route-DateFrom="@firstOfMonth.ToString("yyyy-MM-dd")" asp-route-DateTo="@today.ToString("yyyy-MM-dd")"
      asp-route-CompanyId="@Model.Filters.CompanyId">
      This Month
    </a>
  </div>
</div>

<div class="row g-3 mb-3">
  @foreach (var c in Model.StatCards)
  {
    <div class="col-sm-6 col-lg-3">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex align-items-center gap-3">
          <i class="bi @StatIcon(c.Label) fs-1"></i>
          <div>
            <div class="text-muted small">@c.Label</div>
            <div class="fs-4 fw-semibold">@c.Value</div>
          </div>
        </div>
      </div>
    </div>
  }
</div>

<div class="card shadow-sm">
  <div class="card-body d-flex flex-wrap gap-2">
    <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Reports" asp-action="ExportCsv"
      asp-route-DateFrom="@(Model.Filters.DateFrom?.ToString("yyyy-MM-dd"))"
      asp-route-DateTo="@(Model.Filters.DateTo?.ToString("yyyy-MM-dd"))"
      asp-route-CompanyId="@(Model.Filters.CompanyId)">
      <i class="bi bi-filetype-csv me-1"></i> Export CSV
    </a>

    <a class="btn btn-outline-danger" asp-area="Admin" asp-controller="Reports" asp-action="ExportPdf"
      asp-route-DateFrom="@(Model.Filters.DateFrom?.ToString("yyyy-MM-dd"))"
      asp-route-DateTo="@(Model.Filters.DateTo?.ToString("yyyy-MM-dd"))"
      asp-route-CompanyId="@(Model.Filters.CompanyId)">
      <i class="bi bi-filetype-pdf me-1"></i> Export PDF
    </a>
  </div>
</div>