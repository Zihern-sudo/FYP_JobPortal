@{
  ViewData["Title"] = "Bias & Fairness Guardrails";
}

@await Html.PartialAsync("~/Areas/Admin/Views/Shared/_Toasts.cshtml")

<div class="card shadow-sm">
  <div class="card-header bg-white fw-semibold">Bias & Fairness Guardrails</div>
  <div class="card-body">
    @if (TempData["AiToast"] is string toast && !string.IsNullOrWhiteSpace(toast))
    {
      <div class="alert alert-success">@toast</div>
    }
    <p class="text-muted">“Blind mode” hides name/contact on first pass to reduce bias.</p>
    <form method="post" asp-area="Admin" asp-controller="AI" asp-action="SaveFairness">
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="blindMode" name="blindMode" checked>
        <label class="form-check-label" for="blindMode">Enable blind mode in Screening Queue</label>
      </div>
      <div class="form-check form-switch mt-2">
        <input class="form-check-input" type="checkbox" id="biasReport" name="biasReport">
        <label class="form-check-label" for="biasReport">Show basic exclusion/bias report to admins</label>
      </div>
      <hr />
      <button class="btn btn-primary" type="submit">Save</button>
      <span class="text-muted ms-2">Saved to admin log.</span>
    </form>
  </div>
</div>