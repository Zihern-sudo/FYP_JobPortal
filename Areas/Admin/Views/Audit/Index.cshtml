@{
    var items = ViewBag.Items as List<AuditEvent>;
}
<div class="card shadow-sm">
  <div class="card-header bg-white fw-semibold">Audit log</div>
  <div class="card-body p-0">
    <table class="table mb-0 align-middle">
      <thead><tr><th>When</th><th>Actor</th><th>Action</th><th>Target</th><th>Notes</th></tr></thead>
      <tbody>
        @foreach (var a in items!)
        {
          <tr>
            <td>@a.When</td>
            <td>@a.Actor</td>
            <td>@a.Action</td>
            <td>@a.Target</td>
            <td class="text-muted">@a.Notes</td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>
