@* File: Areas/Admin/Views/Settings/Branding.cshtml *@
@model JobPortal.Areas.Admin.Models.BrandingSettingsViewModel
@{
  ViewData["Title"] = "Branding";
}

<div class="card shadow-sm">
  <div class="card-header bg-white fw-semibold">Branding</div>
  <form method="post" enctype="multipart/form-data" asp-area="Admin" asp-controller="Settings" asp-action="Branding">
    @Html.AntiForgeryToken()
    <div class="card-body">
      <div class="mb-3">
        <label class="form-label">Logo (optional)</label>
        <input type="file" name="logo" class="form-control" accept="image/*" />
        @if (!string.IsNullOrWhiteSpace(Model.LogoUrl))
        {
          <div class="mt-2">
            <img src="@Model.LogoUrl" alt="Logo" style="max-height:48px" />
          </div>
        }
      </div>
      <div class="mb-3">
        <label class="form-label">Primary colour</label>
        <input type="color" class="form-control form-control-color" value="@Model.PrimaryColor" name="PrimaryColor" />
      </div>
    </div>
    <div class="card-footer">
      <button class="btn btn-primary">Save</button>
    </div>
  </form>
</div>