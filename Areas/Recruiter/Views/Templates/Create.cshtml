@model JobPortal.Areas.Recruiter.Models.TemplateFormVM

<a asp-area="Recruiter" asp-controller="Templates" asp-action="Index" class="d-inline-block text-decoration-none mb-3">
    &leftarrow; Back to Templates
</a>

<div class="card shadow-sm">
    <div class="card-header bg-white fw-semibold">Create Template</div>
    <div class="card-body">
        <form asp-area="Recruiter" asp-controller="Templates" asp-action="Create" method="post" class="vstack gap-3">
            @Html.AntiForgeryToken()

            <div class="mb-1">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>

            <div>
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" required maxlength="120" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Subject" class="form-label"></label>
                <span class="text-muted ms-1">(optional)</span>
                <input asp-for="Subject" class="form-control" maxlength="160" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Body" class="form-label"></label>
                <textarea
                    asp-for="Body"
                    class="form-control"
                    rows="8"
                    required
                    data-bs-toggle="tooltip"
                    data-bs-placement="right"
                    data-bs-html="true"
                    title="You can use placeholders like <code>{{FirstName}}</code>. Use <code>{{ }}</code> to add a new placeholder.">
                </textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <a asp-area="Recruiter" asp-controller="Templates" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <button class="btn btn-primary" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Why: ensure tooltip is bound even if partials/scripts load late
        document.addEventListener('DOMContentLoaded', function () {
            var bodyEl = document.getElementById('Body'); // id generated by asp-for="Body"
            if (bodyEl && window.bootstrap) {
                new bootstrap.Tooltip(bodyEl);
            }
        });
    </script>
}
