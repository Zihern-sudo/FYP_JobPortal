@model JobPortal.Areas.Recruiter.Models.TemplateFormVM
@{
    ViewData["Title"] = "New Template";
}

<a asp-area="Recruiter" asp-controller="Templates" asp-action="Index" class="d-inline-block text-decoration-none mb-3">
    &leftarrow; Back to Templates
</a>


<div class="card shadow-sm">
    <div class="card-header bg-white fw-semibold">Create Template</div>
    <div class="card-body">
        <form asp-area="Recruiter" asp-controller="Templates" asp-action="Create" method="post" class="vstack gap-3">
            @Html.AntiForgeryToken()
            <div>
                <label class="form-label">Name</label>
                <input asp-for="Name" class="form-control" required maxlength="120" />
            </div>
            <div>
                <label class="form-label">Subject (optional)</label>
                <input asp-for="Subject" class="form-control" maxlength="160" />
            </div>
            <div>
                <label class="form-label">Body</label>
                <textarea asp-for="Body" class="form-control" rows="8" required></textarea>
                <div class="form-text">You can use placeholders like <code>{{FirstName}}</code>,
                    <code>{{JobTitle}}</code>, etc.
                </div>
            </div>
            <div class="d-flex gap-2">
                <a asp-area="Recruiter" asp-controller="Templates" asp-action="Index"
                    class="btn btn-outline-secondary">Cancel</a>
                <button class="btn btn-primary" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>