@{
  var threads = ViewBag.Threads as List<MessageThread>;
}
<div class="row">
  <div class="col-lg-4">
    <div class="card shadow-sm h-100">
      <div class="card-header bg-white fw-semibold">Threads</div>
      <div class="list-group list-group-flush">
        @foreach (var t in threads!)
        {
          <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
             asp-area="Recruiter" asp-controller="Inbox" asp-action="Thread" asp-route-id="@t.Id">
            <div>
              <div class="fw-semibold">@t.Candidate</div>
              <div class="small text-muted">@t.JobTitle</div>
            </div>
            <div class="text-end">
              <div class="small">@t.LastAt</div>
              @if (t.Unread) { <span class="badge text-bg-primary">New</span> }
            </div>
          </a>
        }
      </div>
    </div>
  </div>
  <div class="col-lg-8">
    <div class="card shadow-sm h-100 d-flex align-items-center justify-content-center text-muted">
      <div>Select a thread on the left.</div>
    </div>
  </div>
</div>
