@model JobPortal.Areas.Recruiter.Models.DashboardVm
@{
    ViewData["Title"] = "Recruiter Dashboard";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}


<div class="row g-3">
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="fw-bold">Total Jobs</div>
                <div class="display-6">@Model.JobsCount</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="fw-bold">Open Jobs</div>
                <div class="display-6">@Model.OpenJobs</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="fw-bold">Applications</div>
                <div class="display-6">@Model.ApplicationsCount</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="fw-bold">Unread Threads</div>
                <div class="display-6">@Model.UnreadThreads</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mt-2">
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header">Latest Jobs</div>
            <div class="card-body p-0">
                <table class="table mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Posted</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.LatestJobs.Count == 0)
                        {
                            <tr>
                                <td colspan="4" class="text-muted">No jobs yet.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var j in Model.LatestJobs)
                            {
                                <tr>
                                    <td>@j.Id</td>
                                    <td>
                                        <a asp-area="Recruiter" asp-controller="Jobs" asp-action="Edit"
                                            asp-route-id="@j.Id">@j.Title</a>
                                    </td>
                                    <td>@j.Status</td>
                                    <td>@j.CreatedAt</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer text-end">
                <a asp-area="Recruiter" asp-controller="Jobs" asp-action="Index"
                    class="btn btn-sm btn-outline-secondary">View all jobs</a>
                <a asp-area="Recruiter" asp-controller="Jobs" asp-action="Add" class="btn btn-sm btn-primary">Post new
                    job</a>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header">Latest Applications</div>
            <div class="card-body p-0">
                <table class="table mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Candidate</th>
                            <th>Job</th>
                            <th>Status</th>
                            <th>Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.LatestApplications.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="text-muted">No applications yet.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var a in Model.LatestApplications)
                            {
                                <tr>
                                    <td>@a.Id</td>
                                    <td>@a.Candidate</td>
                                    <td>@a.JobTitle</td>
                                    <td>@a.Status</td>
                                    <td>@a.UpdatedAt</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer text-end">
                <a asp-area="Recruiter" asp-controller="Candidates" asp-action="Index"
                    class="btn btn-sm btn-outline-secondary">Open candidates</a>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-area="Recruiter" asp-controller="Company" asp-action="Manage" class="btn btn-outline-primary">Edit Company
        Profile</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}