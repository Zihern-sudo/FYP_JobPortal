@{
  var p = ViewBag.Profile as CandidateProfile;
}
<div class="row g-3">
  <div class="col-lg-6">
    <div class="card shadow-sm h-100">
      <div class="card-header bg-white fw-semibold">CV (preview)</div>
      <div class="card-body">
        <p class="text-muted">Pretend CV viewer for <strong>@p?.CvFile</strong>.</p>
        <div style="height:320px; background:#f8f9fa; border:1px dashed #ddd;" class="rounded d-flex align-items-center justify-content-center">
          <span class="text-muted">CV file preview area</span>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="card shadow-sm">
      <div class="card-header bg-white fw-semibold">Parsed data (editable in real app)</div>
      <div class="card-body">
        <div class="row g-2">
          <div class="col-6"><label class="form-label">Name</label><input class="form-control" value="@p?.Name" /></div>
          <div class="col-6"><label class="form-label">Email</label><input class="form-control" value="@p?.Email" /></div>
          <div class="col-6"><label class="form-label">Phone</label><input class="form-control" value="@p?.Phone" /></div>
          <div class="col-12"><label class="form-label">Summary</label><textarea class="form-control" rows="4">@p?.Summary</textarea></div>
        </div>
        <div class="d-grid gap-2 mt-3">
          <button class="btn btn-primary" onclick='showToast("Parse confirmed","success","/Recruiter/Screening/Queue")'>Confirm</button>
          <a class="btn btn-outline-secondary" asp-area="Recruiter" asp-controller="Screening" asp-action="Queue">Back</a>
        </div>
      </div>
    </div>
  </div>
</div>
