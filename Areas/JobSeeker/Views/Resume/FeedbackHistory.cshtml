@model List<JobPortal.Areas.Shared.Models.resume_feedback_history>
@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Feedback History";
}

<link rel="stylesheet" href="~/css/dashboard.css" />

<section class="container mt-4">

    <h2 class="page-title">
        Resume Feedback History
    </h2>

    <p class="text-muted mb-3">
        Showing stored results for:
        <strong>@ViewBag.FileName</strong>
    </p>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No feedback records found for this resume.
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover mt-3">
            <thead class="table-light">
                <tr>
                    <th width="20%">Date</th>
                    <th width="10%">Score</th>
                    <th>Feedback</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var fb in Model)
                {
                    <tr>
                        <td>@fb.created_at.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            @if (fb.score != null)
                            {
                                @($"{fb.score}%")
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>

                        <td>@fb.feedback_text</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Feedback pagination">
            <ul class="pagination justify-content-center mt-3">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                        href="@Url.Action("FeedbackHistory", new { page = ViewBag.CurrentPage - 1 })">Previous</a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("FeedbackHistory", new { page = i })">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                        href="@Url.Action("FeedbackHistory", new { page = ViewBag.CurrentPage + 1 })">Next</a>
                </li>
            </ul>
        </nav>
    }


    <a href="@Url.Action("Feedback", "Dashboard", new { area = "JobSeeker" })" class="btn btn-secondary mt-3">
        ‚Üê Back
    </a>

</section>