@model JobPortal.Areas.JobSeeker.Models.DashboardIndexViewModel
@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="~/css/dashboard.css" />

<div class="dashboard-container">

    <main class="main-content">

        <!-- ðŸ”¹ Search Bar -->
        <div class="job-search mb-4">
            <form asp-area="JobSeeker" asp-controller="Dashboard" asp-action="JobListings" method="get" class="d-flex">
                <input type="text" name="search" value="@Model.SearchKeyword" class="form-control me-2" maxlength="60"
                    placeholder="Search jobs by title, company or industry" />
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>

        <!-- ðŸ”¹ Latest Jobs Section -->
        <section class="recent-jobs">
            <h2>Latest Job Openings</h2>
            <div class="row">
                @foreach (var job in Model.RecentJobs)
                {
                    <div class="col-md-3 mb-3">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">@job.JobTitle</h5>

                                <p class="text-muted mb-1">@job.CompanyName</p>
                                <p class="text-muted small">@job.Industry</p>

                                <p class="mb-1">
                                    <i class="bi bi-geo-alt-fill text-primary"></i>
                                    @job.Location
                                </p>

                                @if (job.MinSalary.HasValue && job.MaxSalary.HasValue)
                                {
                                    <p class="mb-1">
                                        <i class="bi bi-cash text-success"></i>
                                        RM @job.MinSalary - RM @job.MaxSalary
                                    </p>
                                }

                                @if (!string.IsNullOrEmpty(job.JobType))
                                {
                                    <p class="badge bg-info text-dark w-fit">@job.JobType</p>
                                }
                                @if (ViewBag.AppliedJobs.Contains(job.JobId))
                                {
                                    <span class="badge bg-secondary mt-1">Already Applied</span>
                                }

                                <a asp-area="JobSeeker" asp-controller="Dashboard" asp-action="JobDetails"
                                    asp-route-id="@job.JobId" class="btn btn-sm btn-primary mt-auto">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </section>

    </main>
</div>