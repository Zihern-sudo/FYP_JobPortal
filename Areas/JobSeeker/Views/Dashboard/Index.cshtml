@model JobPortal.Areas.JobSeeker.Models.DashboardIndexViewModel
@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="~/css/dashboard.css" />

<div class="dashboard-container">

    <main class="main-content">

        <!-- ðŸ”¹ Search Bar -->
        <div class="job-search mb-4">
            <form asp-action="Index" method="get" class="d-flex">
                <input type="text" name="search" value="@Model.SearchKeyword" class="form-control me-2"
                       placeholder="Search jobs by title, company or industry" />
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>

        <!-- ðŸ”¹ Latest Jobs Section -->
        <section class="recent-jobs">
            <h2>Latest Job Openings</h2>
            <div class="row">
                @foreach (var job in Model.RecentJobs)
                {
                    <div class="col-md-3 mb-3">
                        <div class="card h-100">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@job.JobTitle</h5>
                                <p class="card-text">@job.CompanyName</p>
                                <p class="card-text"><small class="text-muted">@job.Industry</small></p>
                                <a asp-area="JobSeeker" 
                                asp-controller="Dashboard" 
                                asp-action="JobDetails" 
                                asp-route-id="@job.JobId"
                                class="btn btn-sm btn-primary mt-auto">
                                View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

    </main>
</div>
