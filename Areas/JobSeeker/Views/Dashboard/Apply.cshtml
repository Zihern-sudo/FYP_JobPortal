@model JobPortal.Areas.JobSeeker.Models.ApplyViewModel

@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Apply for Job";
}

<link rel="stylesheet" href="~/css/dashboard.css" />

<section class="apply-job-section">
    <h2 class="page-title">Apply for @Model.JobTitle</h2>

    @* âœ… Show warning if user already applied *@
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-warning text-center mt-3">
            @TempData["Error"]
        </div>
    }
    else
    {
        <form asp-action="SubmitApplication" asp-controller="Dashboard" asp-area="JobSeeker" method="post"
            enctype="multipart/form-data" class="card shadow-sm p-4">

            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger mb-3" data-valmsg-summary="true" style="display:block;">
            </div>
            <input type="hidden" asp-for="JobId" />

            <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Position Applying For</label>
                <input asp-for="JobTitle" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Expected Salary</label>
                <input asp-for="ExpectedSalary" type="number" class="form-control" placeholder="Enter your expected salary"
                     />
            </div>

            <div class="mb-3">
                <label class="form-label">Describe Yourself</label>
                <textarea asp-for="Description" class="form-control" placeholder="Tell us a bit about yourself..."
                    rows="4"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Resume</label>
                <select asp-for="SelectedResumeId" id="resumeSelect" class="form-select">
                    <option value="">-- Upload New Resume --</option>
                    @if (Model.ExistingResumes != null && Model.ExistingResumes.Any())
                    {
                        foreach (var resume in Model.ExistingResumes)
                        {
                            <option value="@resume.resume_id">
                                @System.IO.Path.GetFileName(resume.file_path) (@resume.upload_date.ToString("yyyy-MM-dd HH:mm"))
                            </option>
                        }
                    }
                </select>
            </div>

            <div class="mb-3" id="uploadDiv">
                <label class="form-label">Choose File</label>
                <input asp-for="ResumeFile" type="file" class="form-control" accept=".pdf" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Submit Application</button>
        </form>
    }
</section>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            // Check TempData errors from controller
            const tempError = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["Error"]));
            const salaryError = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["SalaryError"]));
            const resumeError = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["ResumeError"]));

            const combinedError = tempError || salaryError || resumeError;

            if (combinedError) {
                Swal.fire({
                    icon: "error",
                    title: "Error",
                    text: combinedError,
                    confirmButtonColor: "#007bff"
                });
            }

            // Optional: hide the validation summary div to prevent static red error box
            const validationSummary = document.querySelector("[data-valmsg-summary='true']");
            if (validationSummary) {
                validationSummary.style.display = "none";
            }

            // Handle resume select toggle
            const resumeSelect = document.getElementById('resumeSelect');
            const uploadDiv = document.getElementById('uploadDiv');

            function toggleUploadDiv() {
                uploadDiv.style.display = resumeSelect.value === "" ? 'block' : 'none';
            }

            resumeSelect.addEventListener('change', toggleUploadDiv);

            // Initialize on page load
            toggleUploadDiv();
        });
    </script>
}