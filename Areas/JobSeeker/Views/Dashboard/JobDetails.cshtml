@model JobPortal.Areas.Shared.Models.job_listing

@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Job Details";
}

<section class="job-details">
    <h1>@Model.job_title</h1>
    <p><strong>Status:</strong> @Model.job_status</p>
    <p><strong>Posted On:</strong> @Model.date_posted.ToString("yyyy-MM-dd")</p>

    <h3>Description</h3>
    <p>@Model.job_description</p>

    <h3>Requirements</h3>
    <p>@Model.job_requirements</p>

    <h3>Salary Range</h3>
    <p>RM @Model.salary_min - RM @Model.salary_max</p>

    <a asp-area="JobSeeker" asp-controller="Dashboard" asp-action="Apply" asp-route-id="@Model.job_listing_id" class="btn btn-success">
    Apply Now
    </a>

    <a href="@Url.Action("JobListings")" class="btn btn-secondary mt-3">‚Üê Back to Listings</a>
</section>
