<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobPortal Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/jobseekerdashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>

<body>
    @{
        var userName = Context.Session.GetString("UserName");

        if (string.IsNullOrEmpty(userName))
        {
            Context.Response.Redirect("/JobSeeker/Account/Login");
        }
    }


    <div class="dashboard-container">

        <!-- ☰ Sidebar Toggle Button -->
        <button class="sidebar-toggle" id="sidebarToggle">☰</button>

        <!-- === Sidebar === -->
        <aside class="sidebar" id="sidebar">
            <!-- Joboria Logo / Text -->
            <a asp-area="JobSeeker" asp-controller="Dashboard" asp-action="Index"
                class="sidebar-brand d-flex align-items-center justify-content-center pt-5 py-4 mb-4 text-center text-decoration-none">
                <h1 class="m-0 fw-bold sidebar-logo-text">Joboria</h1>
            </a>
            <vc:user-sidebar></vc:user-sidebar>

            <nav class="nav-menu">
                <a asp-controller="Dashboard" asp-action="Index"
                    class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                    Home
                </a>
                <a asp-controller="Dashboard" asp-action="JobListings"
                    class="@(ViewContext.RouteData.Values["action"]?.ToString() == "JobListings" ? "active" : "")">
                    Job Listings
                </a>
                <a asp-controller="Dashboard" asp-action="Applications"
                    class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Applications" ? "active" : "")">
                    My Applications
                </a>
                <a asp-controller="Dashboard" asp-action="Feedback"
                    class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Feedback" ? "active" : "")">
                    Resume Feedback
                </a>
                <a asp-controller="Dashboard" asp-action="ResumeBuilder"
                    class="@(ViewContext.RouteData.Values["action"]?.ToString() == "ResumeBuilder" ? "active" : "")">
                    Resume Builder
                </a>
                <a asp-controller="Dashboard" asp-action="Settings"
                    class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Settings" ? "active" : "")">
                    Settings
                </a>
            </nav>
        </aside>

        <!-- === Header with Notification Bell === -->
        <main class="main-content">
            <!-- === Header with Notification Bell === -->
            <div class="dashboard-header">
                <div class="header-spacer"></div> <!-- acts as flexible left space -->
                <div class="notification-wrapper">
                    <a href="@Url.Action("Index", "Inbox")" class="icon-btn">
                        <i class="bi bi-envelope"></i>
                    </a>
                    <button id="notifBell" class="notif-icon bi bi-bell" data-count="0"></button>

                    <div class="notif-dropdown" id="notifDropdown">
                        <h4>Notifications</h4>
                        <ul>
                            <li>New message from recruiter</li>
                            <li>Your application status was updated</li>
                            <li>Resume feedback is ready</li>
                        </ul>
                        <a asp-controller="Dashboard" asp-action="Notifications" class="notif-center-btn">
                            Go to Notification Center
                        </a>
                    </div>
                </div>
            </div>


            @RenderBody()
        </main>
    </div>

<footer>
    <div class="footer container-fluid bg-dark text-white-50 pt-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h6 class="text-white">Company</h6>
                    <a class="btn btn-link text-white-50 p-0 d-block" asp-area="JobSeeker" asp-controller="Home"
                        asp-action="About">About Us</a>
                    <a class="btn btn-link text-white-50 p-0 d-block" asp-area="JobSeeker" asp-controller="Home"
                        asp-action="Privacy">Privacy Policy</a>
                    <a class="btn btn-link text-white-50 p-0 d-block" asp-area="JobSeeker" asp-controller="Home"
                        asp-action="Terms">Terms & Conditions</a>
                </div>

                <div class="col-md-4 mb-3">
                    <h6 class="text-white">Contact</h6>
                    <p class="mb-1"><i class="fa fa-map-marker-alt me-2"></i>123 Street, Kuala Lumpur, MY</p>
                    <p class="mb-1"><i class="fa fa-phone-alt me-2"></i>+60 12-345 6789</p>
                    <p class="mb-1"><i class="fa fa-envelope me-2"></i>support@joboria.com</p>
                </div>
            </div>

            <div class="text-center border-top border-secondary pt-3 mt-3">
                © @DateTime.UtcNow.Year Joboria. All Rights Reserved.
            </div>
        </div>
    </footer>



    @RenderSection("Scripts", required: false)

    <script>
        // Sidebar Toggle
        document.getElementById("sidebarToggle").addEventListener("click", function () {
            document.getElementById("sidebar").classList.toggle("collapsed");
        });

        // Notification Dropdown
        const bell = document.getElementById('notifBell');
        const dropdown = document.getElementById('notifDropdown');

        bell.addEventListener('click', (e) => {
            e.stopPropagation();
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        });

        document.addEventListener('click', (e) => {
            if (!dropdown.contains(e.target) && !bell.contains(e.target)) {
                dropdown.style.display = 'none';
            }
        });

        document.addEventListener("DOMContentLoaded", () => {
            fetch('@Url.Action("GetRecentNotifications", "Dashboard")')
                .then(response => response.json())
                .then(data => {
                    const list = document.querySelector("#notifDropdown ul");
                    const bell = document.getElementById("notifBell");

                    list.innerHTML = "";

                    if (!data.success || data.data.length === 0) {
                        list.innerHTML = `<li class="no-notif">No recent notifications</li>`;
                        bell.removeAttribute("data-count");
                        return;
                    }

                    // Show total unread in badge
                    bell.dataset.count = data.totalUnread;

                    // Show latest 3 notifications in dropdown
                    data.data.forEach(n => {
                        const li = document.createElement("li");
                        li.innerHTML = `
                    <strong>${n.title}</strong><br>
                    <span>${n.message}</span><br>
                    <small>${n.date}</small>
                `;
                        list.appendChild(li);
                    });
                })
                .catch(err => console.error("Error fetching notifications:", err));
        });




    </script>

</body>

</html>