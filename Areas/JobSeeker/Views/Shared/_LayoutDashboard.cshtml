<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobPortal Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/jobseekerdashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>

<body>

    <div class="dashboard-container">

        <!-- â˜° Sidebar Toggle Button -->
        <button class="sidebar-toggle" id="sidebarToggle">â˜°</button>

        <!-- === Sidebar === -->
        <aside class="sidebar" id="sidebar">
            <div class="profile-section">
                <img src="~/images/profile.png" alt="Profile" class="profile-img" />
                <p class="username">@((Context.Session.GetString("UserName")) ?? "Guest User")</p>
                <a asp-area="JobSeeker" asp-controller="Account" asp-action="Logout" class="logout-link">Logout</a>
            </div>

            <nav class="nav-menu">
                <a asp-controller="Dashboard" asp-action="Index"
                    class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                    Home
                </a>
                <a asp-controller="Dashboard" asp-action="JobListings"
                    class="@(ViewContext.RouteData.Values["action"]?.ToString() == "JobListings" ? "active" : "")">
                    Job Listings
                </a>
                <a asp-controller="Dashboard" asp-action="Applications"
                    class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Applications" ? "active" : "")">
                    My Applications
                </a>
                <a asp-controller="Dashboard" asp-action="Feedback"
                    class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Feedback" ? "active" : "")">
                    Resume Feedback
                </a>
                <a asp-controller="Dashboard" asp-action="ResumeBuilder"
                    class="@(ViewContext.RouteData.Values["action"]?.ToString() == "ResumeBuilder" ? "active" : "")">
                    Resume Builder
                </a>
                <a asp-controller="Dashboard" asp-action="Settings"
                    class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Settings" ? "active" : "")">
                    Settings
                </a>
            </nav>
        </aside>

        <!-- === Header with Notification Bell === -->
        <main class="main-content">
            <!-- === Header with Notification Bell === -->
            <div class="dashboard-header">
                <div class="header-spacer"></div> <!-- acts as flexible left space -->
                <div class="notification-wrapper">
                    <a href="@Url.Action("Inbox", "Dashboard")" class="icon-btn">
                        <i class="bi bi-envelope"></i>
                    </a>
                    <button id="notifBell" class="notif-icon bi bi-bell" data-count="0"></button>

                    <div class="notif-dropdown" id="notifDropdown">
                        <h4>Notifications</h4>
                        <ul>
                            <li>New message from recruiter</li>
                            <li>Your application status was updated</li>
                            <li>Resume feedback is ready</li>
                        </ul>
                        <a asp-controller="Dashboard" asp-action="Notifications" class="notif-center-btn">
                            Go to Notification Center
                        </a>
                    </div>
                </div>
            </div>


            @RenderBody()
        </main>
    </div>

    <footer class="text-center py-3">
        &copy; 2025 JobPortal System. All rights reserved.
    </footer>

    @RenderSection("Scripts", required: false)

    <script>
        // Sidebar Toggle
        document.getElementById("sidebarToggle").addEventListener("click", function () {
            document.getElementById("sidebar").classList.toggle("collapsed");
        });

        // Notification Dropdown
        const bell = document.getElementById('notifBell');
        const dropdown = document.getElementById('notifDropdown');

        bell.addEventListener('click', (e) => {
            e.stopPropagation();
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        });

        document.addEventListener('click', (e) => {
            if (!dropdown.contains(e.target) && !bell.contains(e.target)) {
                dropdown.style.display = 'none';
            }
        });

        document.addEventListener("DOMContentLoaded", () => {
            fetch('@Url.Action("GetRecentNotifications", "Dashboard")')
                .then(response => response.json())
                .then(data => {
                    const list = document.querySelector("#notifDropdown ul");
                    const bell = document.getElementById("notifBell");

                    list.innerHTML = ""; // Clear old items

                    if (!data.success || data.data.length === 0) {
                        list.innerHTML = `<li class="no-notif">No recent notifications</li>`;
                        bell.removeAttribute("data-count"); // âœ… Hide badge completely
                        return;
                    }

                    // ðŸŸ¢ Update count
                    bell.dataset.count = data.data.length;

                    // ðŸ“° Display notifications
                    data.data.forEach(n => {
                        const li = document.createElement("li");
                        li.innerHTML = `
                    <strong>${n.title}</strong><br>
                    <span>${n.message}</span><br>
                    <small>${n.date}</small>
                `;
                        list.appendChild(li);
                    });
                })
                .catch(err => console.error("Error fetching notifications:", err));
        });



    </script>

</body>

</html>