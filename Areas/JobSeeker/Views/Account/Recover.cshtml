@{
    ViewData["Title"] = "Recover Account";
    Layout = null;
}

<link rel="stylesheet" href="~/css/auth.css" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="auth-container">
    <h1>Recover Locked Account</h1>
    <p>Enter your email to receive an unlock link.</p>

    <form asp-area="JobSeeker" asp-controller="Account" asp-action="RecoverAccount" method="post" class="auth-form">
        <label>Email</label>
        <input type="email" name="email" placeholder="example@email.com" required />

        <button type="submit" class="login-btn">Send Recovery Link</button>

        <p class="switch-text">
            <a href="/JobSeeker/Account/Login">Back to Login</a>
        </p>
    </form>
</div>

@section Scripts {
    <script>
        const message = '@TempData["Message"]';
        if (message && message.length > 0) {
            Swal.fire({
                icon: message.includes("sent") ? "success" :
                      message.includes("unlocked") ? "success" : "info",
                title: "Notification",
                text: message,
                confirmButtonColor: "#007bff"
            });
        }
    </script>
}
