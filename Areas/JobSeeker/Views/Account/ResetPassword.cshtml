@{
    ViewData["Title"] = "Reset Password";
}

<link rel="stylesheet" href="~/css/auth.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    /* Center the form vertically and horizontally */
    .auth-page-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 85vh;
    }

    /* Form container */
    .auth-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    /* Extend input + button width */
    .auth-form input,
    .auth-form button {
        width: 320px !important;
        max-width: 100%;
    }

    .password-wrapper {
        position: relative;
        width: 320px;
        /* match input width */
        margin-bottom: 15px;
    }

    .password-wrapper input {
        width: 100%;
        padding-right: 40px;
        /* space for the eye */
        box-sizing: border-box;
    }

    .password-wrapper .toggle-password {
        position: absolute;
        top: 50%;
        right: 10px;
        transform: translateY(-50%);
        cursor: pointer;
        color: #555;
        font-size: 1.1rem;
    }
</style>

<div class="auth-page-wrapper">
    <div class="auth-container">
        <h1>Reset Your Password</h1>
        <p>Enter a new password to update your account.</p>

        <form asp-area="JobSeeker" asp-controller="Account" asp-action="ResetPassword" method="post"
            class="auth-form active">

            <input type="hidden" name="email" value="@ViewBag.Email" />
            <input type="hidden" name="token" value="@ViewBag.Token" />

            <div class="password-wrapper">
                <input type="password" id="newPassword" name="newPassword" placeholder="Enter new password"
                    maxlength="20" required />
                <span class="toggle-password"><i class="bi bi-eye"></i></span>
            </div>

            <div class="password-wrapper">
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm new password"
                    maxlength="20" required />
                <span class="toggle-password"><i class="bi bi-eye"></i></span>
            </div>

            <button type="submit" class="login-btn">Update Password</button>

            <p class="switch-text">
                <a asp-area="JobSeeker" asp-controller="Account" asp-action="Login">
                    ‚Üê Back to Login
                </a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // SweetAlert for messages
        document.addEventListener("DOMContentLoaded", function () {
            const message = '@TempData["Message"]';

            if (message && message.length > 0) {
                Swal.fire({
                    icon: message.toLowerCase().includes("successfully") ? "success" : "error",
                    title: "Notification",
                    text: message,
                    confirmButtonColor: "#007bff"
                });
            }

            // Show/hide password toggle
            document.querySelectorAll(".toggle-password").forEach(btn => {
                btn.addEventListener("click", () => {
                    const input = btn.parentElement.querySelector("input");
                    const icon = btn.querySelector("i");

                    if (input.type === "password") {
                        input.type = "text";
                        icon.classList.remove("bi-eye");
                        icon.classList.add("bi-eye-slash");
                    } else {
                        input.type = "password";
                        icon.classList.remove("bi-eye-slash");
                        icon.classList.add("bi-eye");
                    }
                });
            });
        });
    </script>
}