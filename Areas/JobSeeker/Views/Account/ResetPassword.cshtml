@{
    ViewData["Title"] = "Reset Password";
}

<link rel="stylesheet" href="~/css/auth.css" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    /* Center the form vertically and horizontally */
    .auth-page-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 85vh;
    }

    /* Form container */
    .auth-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    /* Extend input + button width */
    .auth-form input,
    .auth-form button {
        width: 320px !important;
        max-width: 100%;
    }
</style>

<div class="auth-page-wrapper">
    <div class="auth-container">
        <h1>Reset Your Password</h1>
        <p>Enter a new password to update your account.</p>

        <form asp-area="JobSeeker" asp-controller="Account" asp-action="ResetPassword"
              method="post" class="auth-form active">

            <input type="hidden" name="email" value="@ViewBag.Email" />
            <input type="hidden" name="token" value="@ViewBag.Token" />

            <label for="newPassword">New Password</label>
            <input type="password" id="newPassword" name="newPassword"
                   placeholder="Enter new password" required />

            <label for="confirmPassword">Confirm Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword"
                   placeholder="Confirm new password" required />

            <button type="submit" class="login-btn">Update Password</button>

            <p class="switch-text">
                <a asp-area="JobSeeker" asp-controller="Account" asp-action="Login">
                    ‚Üê Back to Login
                </a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const message = '@TempData["Message"]';

            if (message && message.length > 0) {
                Swal.fire({
                    icon: message.toLowerCase().includes("successfully") ? "success" : "error",
                    title: "Notification",
                    text: message,
                    confirmButtonColor: "#007bff"
                });
            }
        });
    </script>
}
