@{
    ViewData["Title"] = "Forgot Password";
}

<link rel="stylesheet" href="~/css/auth.css" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    /* Ensures form stays centered even with layout */
    .auth-page-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 85vh;
    }

    /* Extend input + button width only */
    .auth-form input,
    .auth-form button {
        width: 320px !important;
        max-width: 100%;
    }
</style>


<div class="auth-page-wrapper">
    <div class="auth-container">
        <h1>Forgot Password</h1>
        <p>Please enter your registered email to reset your password.</p>

        <form asp-area="JobSeeker" asp-controller="Account" asp-action="ForgotPassword"
              method="post" class="auth-form active">

            <label for="email">Email</label>
            <input type="email" id="email" name="email"
                   placeholder="Enter your email"
                   maxlength="190" required />

            <button type="submit" class="login-btn">Send Reset Link</button>

            <p class="switch-text">
                <a asp-area="JobSeeker" asp-controller="Account" asp-action="Login">
                    ‚Üê Back to Login
                </a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const message = '@TempData["Message"]';

            if (message && message.length > 0) {
                Swal.fire({
                    icon: message.toLowerCase().includes("sent") ? "success" : "info",
                    title: "Notification",
                    text: message,
                    confirmButtonColor: "#007bff"
                });
            }
        });
    </script>
}
