@{
    ViewBag.Title = "Our Services";
    Layout = "_Layout"; 
}

<div class="container py-5">
    <h1 class="text-center mb-4">Our Services</h1>
    <p class="text-center text-muted mb-5">
        Joboria provides a seamless recruitment experience for both job seekers and employers, 
        offering powerful tools to simplify job searching and hiring.
    </p>

    <div class="row g-4">

        <!-- Job Matching -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h4 class="card-title">Job Matching & Recommendations</h4>
                    <p class="card-text">
                        Our platform recommends jobs tailored to your skills, experience, and preferences, 
                        helping you discover suitable opportunities quickly.
                    </p>
                </div>
            </div>
        </div>

        <!-- Resume Builder -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h4 class="card-title">Resume Builder & Optimization</h4>
                    <p class="card-text">
                        Create professional resumes using our built-in resume builder or upload 
                        your existing resume for automated improvements and formatting.
                    </p>
                </div>
            </div>
        </div>

        <!-- Application Tracking -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h4 class="card-title">Application Tracking</h4>
                    <p class="card-text">
                        Keep track of all your job applications in one place and stay updated with 
                        notifications on application status changes.
                    </p>
                </div>
            </div>
        </div>

        <!-- Recruiter Dashboard -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h4 class="card-title">Recruiter Dashboard</h4>
                    <p class="card-text">
                        Employers can manage job listings, review candidates efficiently, and streamline 
                        their entire recruitment process through a dedicated dashboard.
                    </p>
                </div>
            </div>
        </div>

        <!-- Skill Gap Feedback -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h4 class="card-title">Skill Gap Feedback</h4>
                    <p class="card-text">
                        Our AI analyzes resumes to identify skill gaps and provides insights to help 
                        job seekers improve their competitiveness.
                    </p>
                </div>
            </div>
        </div>

        <!-- Job Alerts -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h4 class="card-title">Job Alerts & Notifications</h4>
                    <p class="card-text">
                        Receive real-time notifications and job alerts that match your preferences, 
                        ensuring you never miss a good opportunity.
                    </p>
                </div>
            </div>
        </div>

    </div>
</div>
