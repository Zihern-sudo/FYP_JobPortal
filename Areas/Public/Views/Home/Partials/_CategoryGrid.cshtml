<div class="container-fluid py-5">
    <div class="container">
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Category</h1>
        <div class="row g-4">

            @foreach (var cat in ViewBag.CategoryCounts)
            {
                <div class="col-lg-3 col-sm-6 wow fadeInUp">
                    <a class="cat-item rounded p-4" asp-area="Public" asp-controller="Jobs" asp-action="List"
                        asp-route-category="@cat.Key">

                        <i class="fa fa-3x fa-briefcase text-primary mb-4"></i>

                        <h6 class="mb-3">@cat.Key</h6>

                        <p class="mb-0">@cat.Value Vacanc@(cat.Value > 1 ? "ies" : "y")</p>
                    </a>
                </div>
            }
        </div>

    </div>
</div>